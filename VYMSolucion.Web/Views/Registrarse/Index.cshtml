@using Resources

@{
    ViewBag.Title = ResourceLayout.Registrarse;
}

<div class="row">
    <div class="col-md-12">
        <div class="promo-box heading text-center">
            <h2>@ResourceLayout.CreaCuenta</h2>
            <p class="lead">@ResourceLayout.MensajeRegistrarCuenta:</p>
            <hr />
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-offset-3">
        <div class="row">
            <!-- 1 -->
            <div class="col-md-4 box">
                <div class="promo-box-button">
                    @(Html.Kendo().Button()
                        .Name("btnRegistrarsePaciente")
                          .Content(@<text>
                            <i class="fa fa-users"></i>
                            <h3>@ResourceLayout.Paciente</h3>
                            <hr />
                            <p>@ResourceLayout.MensajeBotonPaciente.</p>
                        </text>)
                        .HtmlAttributes(new { type = "button", style = "width: 100%;" })
                        .Events(e => e.Click("ClickVistaPaciente"))
                    )
                </div>
            </div>
            <!-- .1 -->
            <!-- 2 -->
            <div class="col-md-4 box">
                <div class="promo-box-button">
                    @(Html.Kendo().Button()
                        .Name("btnRegistrarseProfesional")
                          .Content(@<text>
                            <i class="fa fa-users"></i>
                            <h3>@ResourceLayout.Profesional</h3>
                            <hr />
                            <p>@ResourceLayout.MensajeBotonProfesional.</p>
                        </text>)
                        .HtmlAttributes(new { type = "button", style = "width: 100%;" })
                        .Events(e => e.Click("ClickVistaProfesional"))
                    )
                </div>
            </div>
            <!-- .2 -->
        </div>
    </div>
</div>

<script>
    //Función para abrir vista de paciente
    function ClickVistaPaciente() {
        window.location.href = "@Url.Action("Paciente","Registrarse")";
    }
    //Función para abrir vista de profesional
    function ClickVistaProfesional() {
        window.location.href = "@Url.Action("Profesional","Registrarse")";
    }
</script>


